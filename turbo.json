{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "TELEGRAM_BOT_TOKEN",
    "TELEGRAM_CHAT_ID",
    "NEXT_PUBLIC_API_URL",
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED",
    "POSTGRES_PRISMA_URL",
    "NEXTAUTH_URL",
    "NEXTAUTH_SECRET"
  ],
  "tasks": {
    "admin#build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_PRISMA_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "api#build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_PRISMA_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "api#dev": {
      "cache": false,
      "env": [
        "NODE_ENV",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_PRISMA_URL",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET"
      ],
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_CHAT_ID",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_PRISMA_URL"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "env": [
        "NODE_ENV",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_CHAT_ID",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_PRISMA_URL"
      ],
      "persistent": true
    },
    "format": {
      "cache": false,
      "dependsOn": ["^format"]
    },
    "lint": {
      "cache": false,
      "dependsOn": ["^lint"],
      "env": [
        "NODE_ENV",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_CHAT_ID",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_PRISMA_URL"
      ]
    },
    "marketing#build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "TELEGRAM_BOT_TOKEN",
        "TELEGRAM_CHAT_ID",
        "NEXT_PUBLIC_API_URL",
        "DATABASE_URL",
        "DATABASE_URL_UNPOOLED",
        "POSTGRES_PRISMA_URL"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    }
  }
}
